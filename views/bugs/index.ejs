<% layout('../views/layouts/boilerplate')%>
<div  id="cluster-map"></div>

<h1>All Bugs</h1>

<div>
  <a href="/bugs/new">ADD BUG</a>
</div>
<% for (let bug of bugs) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(bug.images.length) { %>
      <img  class="img-fluid" alt="" src="<%= bug.images[0].url %>" />
      <% } else { %>
      <img
        class="img-fluid"
        alt=""
        src="https://res.cloudinary.com/deskiol0z/image/upload/v1679138839/BugginOut/x0g8avsptzrmlxiv8jrf.jpg"
      />
      <% } %>
    </div>
    <div class="col-6 fst-italic"><%= bug.description %></div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= bug.name %></h5>
        <p class="card-text"><%= bug.location %></p>
        <p class="card-text">
          <small class="text-muted"><%= bug.sciName %></small>
        </p>
        <a class="btn btn-primary" href="/bugs/<%= bug._id %>"
          >View <%= bug.name %></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const bugs = {features: <%- JSON.stringify(bugs)%>}
</script>

<script src="/javascripts/clusterMap.js"></script>
